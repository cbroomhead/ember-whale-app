{{!--this is the template--}}


<h1 class="title">Generation Mix by Balancing Authority (US ONLY)</h1>

<div class="row">
   <div class=col-md-3></div>
   <div class=col-md-6>
      <div class="alert alert-warning center center">
         <strong>Disclaimer!</strong> This app will only work with city located in the United States. Also, some utilities do not make their data available to WattTime so the query may return empty.
      </div>
   </div>
</div>


<div class="form-horizontal form-group form-group-lg row">
   <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="text" value=city class="form-control" placeholder="Enter a city" autofocus="autofocus"}}
   </div>
   <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button class="btn btn-primary btn-lg btn-block" {{action 'getData'}}>Submit</button>
   </div>
</div>

<br/><br/>

<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>



      {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}} {{authorityMessage}}</div>
      {{/if}}

   </div>
</div>
<br/><br/> 

{{#if piecharts}}
<div class="chart-container" data-template-name="whales">
   {{high-charts mode=mode chartOptions=chartOptions content=model theme=theme}}
</div>
{{/if}}

<br/><br/>

<div class="row">
   <div class=col-md-1></div>
   <div class=col-md-10>
      {{#if errorMessage}}
      <div class="chart-container" data-template-name="whales">
         <div class="alert alert-danger bigger">{{errorMessage}}</div>
      </div>
      {{/if}}
   </div>
</div>



<br/><br/>

<div class="footer">
   <p>Copyright (c) Celine Broomhead 2016</p>
</div>


